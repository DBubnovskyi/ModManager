<Window xmlns:UserControls="clr-namespace:ModManager.UserControls"  x:Class="ModManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModManager"
        mc:Ignorable="d"
        Background="#333"
        Title="DCS Mods Manager" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="110"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <UserControls:FolderControl x:Name="Folder" Grid.Row="0" />
        <UserControls:ModsControl x:Name="Mods" Grid.Row="1" />
    </Grid>
</Window>
